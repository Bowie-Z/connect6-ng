<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.tsinghua.se2012.connect6"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity android:name=".StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetModeActivity"
            android:theme="@style/Theme.SetModeActivity" >
        </activity>
        <activity
            android:name=".GameSettingActivity"
            android:theme="@style/Theme.GameSettingActivity" >
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:theme="@style/Theme.AboutUsActivity" >
        </activity>
        <activity 
            android:name=".GameActivity" >
        </activity>
        <activity 
            android:name=".GameResultActivity" 
			android:theme="@style/Theme.GameResultActivity" >            
        </activity>
    </application>

</manifest>